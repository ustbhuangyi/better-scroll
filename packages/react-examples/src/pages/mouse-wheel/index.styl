.mouse-wheel-vertical-scroll
  .mouse-wheel-wrapper
    height 400px
    overflow hidden
    .mouse-wheel-item
      height 50px
      line-height 50px
      font-size 20px
      font-weight bold
      text-align center
      &:nth-child(2n)
        background-color #C3D899
      &:nth-child(2n+1)
        background-color #F2D4A7

.mouse-wheel-horizontal-scroll
  .mouse-wheel-wrapper
    width 90%
    margin 80px auto
    white-space nowrap
    border 3px solid #42b983
    border-radius 5px
    overflow hidden
    .mouse-wheel-content
      display inline-block
      .mouse-wheel-item
        height 50px
        line-height 50px
        font-size 24px
        display inline-block
        text-align center
        padding 0 20px
        &:nth-child(2n)
          background-color #C3D899
        &:nth-child(2n+1)
          background-color #F2D4A7
